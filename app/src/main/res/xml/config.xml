<?xml version='1.0' encoding='utf-8'?>
<widget id="net.jesselockard.android_things_cordova" version="@string/app_ver_name" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Battery">
        <param name="android-package" value="org.apache.cordova.batterystatus.BatteryListener" />
    </feature>

    <name>Android Things Cordova Embedded</name>
    <description>
        An Android Things application with the CordovaWebView library embedded. Also contains the Whitelist and Battery Listener plugins.
    </description>
    <author email="jesselockard99@gmail.com" href="https://github.com/Cezear">
        Ryan Lockard
    </author>

    <content src="index.html" />

    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />

    <preference name="loglevel" value="DEBUG" />
</widget>
